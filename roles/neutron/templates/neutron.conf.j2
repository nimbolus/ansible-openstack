# {{ansible_managed}}

[DEFAULT]
core_plugin = ml2
auth_strategy = keystone
transport_url = rabbit://{{neutron_rabbitmq_user}}:{{neutron_rabbitmq_user_password}}@{{rabbitmq_host}}
{% if is_network_node %}
service_plugins = router
allow_overlapping_ips = true
notify_nova_on_port_status_changes = true
notify_nova_on_port_data_changes = true

[database]
connection = mysql+pymysql://neutron:{{neutron_db_user_password}}@{{db_host}}/neutron

[nova]
region_name = RegionOne
auth_url = https://{{keystone_host}}:5000
auth_type = password
username = {{neutron_nova_user}}
password = {{neutron_nova_user_password}}
project_domain_name = default
project_name = service
user_domain_name = default
{% endif %}

[keystone_authtoken]
auth_url = https://{{keystone_host}}:5000/v3
memcached_servers = {{memcached_host}}:11211
auth_type = password
project_domain_name = default
user_domain_name = default
project_name = service
username = neutron
password = {{neutron_user_password}}

[oslo_concurrency]
lock_path = /var/lib/neutron/tmp
